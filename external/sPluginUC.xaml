<UserControl x:Class="scripthea.external.sPluginUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:scripthea.external"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" FontSize="13">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="373*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
            <Button x:Name="btnBrowse" HorizontalAlignment="Right" Width="80" Margin="0,4,7,4.333" Background="#FFE5FFE9" Content="Browse" FontFamily="Segoe UI Black" Click="btnBrowse_Click" ></Button>
            <Label x:Name="lbTargetFolder" Content="Target folder" HorizontalAlignment="Left" Margin="20,4,0,4.333" VerticalAlignment="Center" FontFamily="Segoe UI Semibold"/>
        </StackPanel>
        <Button x:Name="btnTest" HorizontalAlignment="Right" Width="80" Margin="0,4,7,4.333" Background="#FFFFFDE5" Content="Test" FontFamily="Segoe UI Black" Click="btnTest_Click"></Button>
        <Label x:Name="lbLastAddedFile" Content="Last generated file: " Grid.Row="1" HorizontalAlignment="Left" Margin="20,4,0,4.333" VerticalAlignment="Center" FontFamily="Segoe UI Semibold"/>
    </Grid>
</UserControl>
