<UserControl x:Class="scripthea.external.ImportUtilUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:scripthea.external"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="613.671" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="300"/>
        </Grid.RowDefinitions>
        <GroupBox Header="Image folder to convert to image depot" Margin="0" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="66.835"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="tbImageDepot" Background="#FFFBFBF4" Margin="0,0,2.962,-0.051" IsReadOnly="True" TextChanged="tbImageDepot_TextChanged" >
                </TextBox>
                <Button x:Name="btnNewFolder" Grid.Column="1" Content="Browse" Click="btnNewFolder_Click" HorizontalAlignment="Left" Margin="5.038,0,0,-0.051" Width="60" Foreground="#FF0F8001" FontWeight="Bold" Background="#FFF4F4F4" Visibility="Collapsed">
                </Button>
                <Button x:Name="btnConvertFolder" Grid.Column="1" Content="Convert" Click="btnConvertFolder_Click" HorizontalAlignment="Right" Margin="0,0,2.797,-0.051" Width="60" Foreground="#FF0049BB" FontWeight="Bold" Background="#FFF4F4F4" IsEnabled="False">
                </Button>
            </Grid>
        </GroupBox>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Image x:Name="imgMenu" Margin="5,2,7,0" VerticalAlignment="Top" Width="25" Source="/Scripthea;component/Properties/TripleBarTeal.bmp" ToolTip="Right click - menu; Double left - invert" Cursor="Hand" ContextMenuOpening="imgMenu_ContextMenuOpening" MouseDown="imgMenu_MouseDown">
                <Image.ContextMenu>
                    <ContextMenu x:Name="cmCue"/>
                </Image.ContextMenu>
            </Image>
            <Label Content="Source" Margin="0,2,0,0"/>
            <ComboBox SelectedIndex="0" Background="White" Margin="3">
                <ComboBoxItem Content="Stable Diffusion"/>
                <ComboBoxItem Content="Craiyon" IsEnabled="False"/>
            </ComboBox>
            <CheckBox x:Name="chkKeepNames" Content="Keep the names" Margin="10,6,0,0"></CheckBox>
            <CheckBox x:Name="chkDeleteUnchecked" Content="Delete unchecked images" Margin="10,6,0,0" Checked="chkDeleteUnchecked_Checked" Unchecked="chkDeleteUnchecked_Unchecked" ></CheckBox>
        </StackPanel>
        <TabControl x:Name="tcMain" Grid.Row="2" BorderBrush="{x:Null}" SelectedIndex="1" >
            <TabItem x:Name="tiList" Visibility="Collapsed">
                <ListBox x:Name="lstFiles"></ListBox>
            </TabItem>
            <TabItem x:Name="tiGrid" Visibility="Collapsed">
                <DataGrid x:Name="dGrid" Margin="0" SelectionMode="Single" CanUserAddRows="False" SelectionChanged="dGrid_SelectionChanged" HorizontalScrollBarVisibility="Disabled" AutoGeneratingColumn="dGrid_AutoGeneratingColumn" MaxColumnWidth="1000" CanUserReorderColumns="False" />
            </TabItem>
        </TabControl>
        <GridSplitter Grid.Row="3" VerticalAlignment="Top" HorizontalAlignment="Stretch" Height="3"></GridSplitter>
        <Grid x:Name="gridImage" Grid.Row="3" Margin="0,5,0,0" >
            <Image x:Name="image" />
        </Grid>
    </Grid>
</UserControl>
