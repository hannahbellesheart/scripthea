<UserControl x:Class="scripthea.external.diffusionUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:scripthea.external"
             mc:Ignorable="d" d:DesignWidth="800" Height="60" FontSize="13" BorderThickness="0,0,0,1" >
    <Grid>
        <StackPanel Margin="0,0,0.203,0.215" Orientation="Horizontal">
            <Grid Width="150" Height="60">
                <Label x:Name="lbStatus" Height="25" Content="COMM:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,0,3"/>
                <Button x:Name="btnShoot" Content="Shoot" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="26" Width="60" Click="btnShoot_Click" Margin="5,0,0,3" Background="#FFF0FBFA"/>
            </Grid>
            <Grid Width="150" Height="60">
                <Button x:Name="btnOpen" Content="Open Session" Width="90" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Margin="0,3,0,0" Click="btnOpen_Click" Background="#FFF8FDF6"/>
                <Button x:Name="btnClose" Content="Close session" HorizontalAlignment="Left" Width="90" Click="btnClose_Click" Background="#FFFDFCEA" Margin="0,0,0,3" VerticalAlignment="Bottom"/>
            </Grid>
            <Grid Width="150" Height="60">
                <TextBlock x:Name="tbAdvice" TextWrapping="Wrap" Text="TextBlldffgo;sdhfo;ghdsf;osdf;h olhdolehegoijaefljkadf oliojheaoigjojdafjlvolioafhf opijaefoigoijoiasjfdfvlkfnlvknfvvnfdoig ock houhljjpi" Margin="0" FontSize="12" ScrollViewer.CanContentScroll="True"/>
            </Grid>
            <Grid Width="150" Height="60">
                <StackPanel>
                    <Label x:Name="lb1" Content="Stable Diffusion" HorizontalAlignment="Center" Margin="0,-5,0,0" VerticalAlignment="Top" FontSize="15" Height="28" Foreground="Blue" Cursor="Hand" ToolTip="Google 'Stable Diffusion'" MouseDown="lb1_MouseDown"/>
                    <Label x:Name="lb2" Content="by Stability.AI" HorizontalAlignment="Center" Margin="0,-6,0,0" VerticalAlignment="Top" FontSize="14" Height="27" Cursor="Hand" Foreground="Navy" ToolTip="Visit Stability.AI" MouseDown="lb1_MouseDown"/>
                    <Label x:Name="lb3" Content="local server" HorizontalAlignment="Center" Margin="0,-8,0,0" VerticalAlignment="Top" FontSize="14" Height="26" Cursor="Hand" Foreground="Navy" ToolTip="Open the front-end" MouseDown="lb1_MouseDown"/>
                </StackPanel>

            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
