<UserControl x:Class="scripthea.external.SDiffusionUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:scripthea.external" xmlns:UtilsNS="clr-namespace:UtilsNS"
             mc:Ignorable="d" Height="64" FontSize="13" BorderThickness="0,1,2,0" BorderBrush="#FFEEEEEE" >
    <Grid>
        <StackPanel Margin="1,3,1,1" Orientation="Horizontal">
            <local:SD_API_UC x:Name="sd_api_uc"></local:SD_API_UC>
            <local:SDscriptUC x:Name="sdScriptUC"></local:SDscriptUC> 
            <Grid Width="150" Height="60">
                <StackPanel Margin="0">
                    <Label x:Name="lb1" Content="Stable Diffusion" HorizontalAlignment="Center" Margin="0,-5,0,0" VerticalAlignment="Top" FontSize="15" Height="28" Foreground="RoyalBlue" Cursor="Hand" ToolTip="Google 'Stable Diffusion text-to-image generator'" MouseDown="lb1_MouseDown"/>
                    <Label x:Name="lb2" Content="by Stability.AI" HorizontalAlignment="Center" Margin="0,-6,0,0" VerticalAlignment="Top" FontSize="14" Height="27" Cursor="Hand" Foreground="Navy" ToolTip="Visit Stability.AI webste" MouseDown="lb1_MouseDown"/>
                    <Label x:Name="lb3" Content="local server" HorizontalAlignment="Center" Margin="0,-8,0,0" VerticalAlignment="Top" FontSize="14" Height="26" Cursor="Hand" Foreground="Navy" ToolTip="Open the webUI front-end in your browser" MouseDown="lb1_MouseDown"/>
                </StackPanel>
            </Grid>
            <local:tempRegulatorUC x:Name="tempRegulator" />
        </StackPanel>
    </Grid>
</UserControl>
