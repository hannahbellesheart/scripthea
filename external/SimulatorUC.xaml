<UserControl x:Class="scripthea.SimulatorUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:scripthea"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" FontSize="13">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="194*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Button x:Name="btnGenerate" Content="Simulate image generation" HorizontalAlignment="Center" Margin="3,14,0,12.823" Width="286" Foreground="#FF0F8001" Background="#FFF4F4F4" VerticalAlignment="Center" Click="btnGenerate_Click"/>
        </Grid>
        <Image x:Name="imgSimul" Grid.Row="1"></Image>
    </Grid>
</UserControl>
