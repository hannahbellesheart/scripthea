<UserControl x:Class="scripthea.external.DeepAIUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:scripthea.external"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" FontSize="12">
    <Grid Background="#FFFAFDFA">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="404*"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="0" Orientation="Horizontal">
            <Label HorizontalAlignment="Left" VerticalAlignment="Center" Content="Test run prompt:"></Label>
            <TextBox x:Name="tbIn" Width="366" Text="Sunset over the bay" Margin="0,5" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
            <Button x:Name="btnQuery" HorizontalAlignment="Left" VerticalAlignment="Center" Content="Query DeepAI" Width="100" Background="#FFF0F3F9" Margin="15,10,0,9.823" Click="btnQuery_Click" Height="30" ></Button>
            <Label x:Name="lbStatus" Content="Status" VerticalAlignment="Center" Margin="10,0,0,0"></Label>
        </StackPanel>
        <Grid Grid.Row="1">
            <Image x:Name="imgOut"></Image>
        </Grid>
    </Grid>
</UserControl>
