<UserControl x:Class="scripthea.CraiyonImportUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:scripthea"
             mc:Ignorable="d" 
             d:DesignHeight="450" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="300"/>
        </Grid.RowDefinitions>
        <GroupBox Header="Craiyon image folder to convert" Margin="0" >
            <Grid>
                <Grid.ColumnDefinitions>
                    
                    <ColumnDefinition Width="166*"/>
                    <ColumnDefinition Width="130"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="tbImageDepo" Background="#FFFBFBF4" Margin="0" IsReadOnly="True" >
                </TextBox>
                <Button x:Name="btnNewFolder" Grid.Column="1" Content="Browse" Click="btnNewFolder_Click" HorizontalAlignment="Left" Margin="5,0,0,0" Width="60" Foreground="#FF0F8001" FontWeight="Bold" Background="#FFF4F4F4">
                </Button>
                <Button x:Name="btnConvertFolder" Grid.Column="1" Content="Convert" Click="btnConvertFolder_Click" HorizontalAlignment="Right" Margin="0,0,3,0" Width="60" Foreground="#FF0049BB" FontWeight="Bold" Background="#FFF4F4F4" IsEnabled="False">
                </Button>
            </Grid>
        </GroupBox>
        <TabControl x:Name="tcMain" Grid.Row="1" BorderBrush="{x:Null}" SelectedIndex="1" >
            <TabItem x:Name="tiList" Visibility="Collapsed">
                <ListBox x:Name="lstFiles"></ListBox>
            </TabItem>
            <TabItem x:Name="tiGrid" Visibility="Collapsed">
                <DataGrid x:Name="dGrid" Margin="0" SelectionMode="Single" CanUserAddRows="False" SelectionChanged="dGrid_SelectionChanged" HorizontalScrollBarVisibility="Disabled" AutoGeneratingColumn="dGrid_AutoGeneratingColumn" MaxColumnWidth="1000" CanUserReorderColumns="False" />
            </TabItem>
        </TabControl>
        <GridSplitter Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Stretch" Height="3"></GridSplitter>
        <Image x:Name="image" Margin="0,5,0,0" Grid.Row="2" />

    </Grid>
</UserControl>
