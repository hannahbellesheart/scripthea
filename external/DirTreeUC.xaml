<UserControl x:Class="UtilsNS.DirTreeUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UtilsNS"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" FontSize="13">
    <Grid>
        <TreeView x:Name="tvFolders" Margin="0,0,0,25" SelectedItemChanged="tvFolders_SelectedItemChanged" KeyDown="tvFolders_KeyDown" MouseDoubleClick="tvFolders_MouseDoubleClick" ></TreeView>
        <TextBlock x:Name="tbSelected" TextWrapping="Wrap" VerticalAlignment="Bottom" Text="" Margin="0,0,0,3"/>
        <ComboBox x:Name="cbDrives" Margin="0,0,25,0" SelectionChanged="comboBox_SelectionChanged" Background="#FFF0F0F0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="50" Height="25" FontSize="13"/>
    </Grid>
</UserControl>
