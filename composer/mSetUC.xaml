<UserControl x:Name="mSet1UC" x:Class="scripthea.composer.mSetUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:scripthea.composer"
             mc:Ignorable="d" d:DesignWidth="300" Height="20">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="0"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="tbTitle" Text="item" VerticalAlignment="Center" Width="300" HorizontalAlignment="Left"></TextBlock>
        <Button Grid.Column="1" Margin="0"></Button> 
    </Grid>
</UserControl>
