<UserControl x:Class="scripthea.composer.CueItemUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:scripthea.composer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="gridBg">
            <RadioButton x:Name="rbChecked" Content="" Margin="0" VerticalAlignment="Center" HorizontalAlignment="Center" GroupName="RadioSeeds"/>
            <CheckBox x:Name="checkBox" Content="" Margin="0" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed"/>
        </Grid>
        <TextBox x:Name="tbSeed" Grid.Column="1" Margin="0" TextWrapping="Wrap" IsReadOnly="True" Background="White" Text="□" />
    </Grid>
</UserControl>
