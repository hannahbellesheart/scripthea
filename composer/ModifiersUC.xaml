<UserControl x:Class="scripthea.composer.ModifiersUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:scripthea"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Name="colMap" Width="150"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="27"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="120"/>
            </Grid.RowDefinitions>
            <Label Content="Modifiers Map" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="DarkGreen"></Label>
            <ListBox x:Name="listBox" Grid.Row="1"  Margin="2" />
            <GroupBox Header="Modifiers Options" Grid.Row="2" Margin="2">
                <StackPanel x:Name="stackOptModifiers" Margin="2" >
                    <CheckBox x:Name="chkAddEmpty" Content="Add an empty modifier" Margin="0"></CheckBox>
                </StackPanel>
            </GroupBox>
        </Grid>
        <StackPanel x:Name="stackModifiers" Margin="0,0,0.203,0.228" Grid.Column = "1" Orientation="Horizontal">
        </StackPanel>
        <Button x:Name="btnModifMap" Content=">>" Height="23" Width="27" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,2,5,0" FontWeight="Bold" Background="#FFFEFBE1" Click="btnModifMap_Click" BorderBrush="#FF589B37" BorderThickness="2"/>
    </Grid>
</UserControl>
